<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <AssemblyName>AddyMouseHID</AssemblyName>
    <OutputPath>.\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>

    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <Target Name="ForceCleanup" AfterTargets="Build">
    <RemoveDir Directories="$(ProjectDir)obj" />
    <Delete Files="$(OutputPath)$(AssemblyName).pdb" />
    <Delete Files="$(OutputPath)$(AssemblyName).deps.json" />
  </Target>
</Project>
